<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="0dp"
    android:background="@color/black"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_num1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:hint="0"
        android:onClick="onClickDigito"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/white"
        android:textColorLink="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num1" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="414dp"
        android:layout_height="81dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#B5B5B5"
        android:foregroundTint="#E61212"
        android:hapticFeedbackEnabled="true"
        android:text="C"
        android:textColor="@color/black"
        android:textColorHighlight="@color/white"
        android:textColorLink="#DD1D1D"
        android:textSize="34sp"
        app:circularflow_defaultRadius="0dp"
        app:circularflow_radiusInDP="0dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_num2" />

    <Button
        android:id="@+id/btnSlash"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_marginTop="-8dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickOperation"
        android:text="/"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEquals"
        app:layout_constraintTop_toBottomOf="@+id/btnPor" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="7"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMas"
        app:layout_constraintEnd_toStartOf="@+id/btnMas"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_marginTop="-8dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickOperation"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="4"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="5"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="6"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMenos"
        app:layout_constraintEnd_toStartOf="@+id/btnMenos"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn5" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_marginTop="-8dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickOperation"
        android:text="-"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnMas" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="1"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="2"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn3"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="3"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPor"
        app:layout_constraintEnd_toStartOf="@+id/btnPor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btnPor"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:layout_marginTop="-8dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickOperation"
        android:text="*"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMenos" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="0"
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPunto"
        app:layout_constraintEnd_toStartOf="@+id/btnPunto"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:onClick="onClickDigito"
        android:text="."
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnEquals"
        app:layout_constraintEnd_toStartOf="@+id/btnEquals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="103dp"
        android:layout_height="100dp"
        android:backgroundTint="#857E7C"
        android:text="="
        android:textColor="#000000"
        android:textSize="34sp"
        app:cornerRadius="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSlash"
        app:layout_constraintEnd_toStartOf="@+id/btnSlash"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPunto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="By Miguel Ricardo"
        android:textColor="#AEA9A9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>